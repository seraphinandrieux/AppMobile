<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="controlMusicViewModel"
            type="cpe.mobile.mybrowzik.viewModel.ControlMusicViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/control_music_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">


        <TextView
            android:id="@+id/selectedMusicTitle"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/stopButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectedMusicArtist"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="@{controlMusicViewModel.title}" />

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="55dp"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="34dp"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_next" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintStart_toEndOf="@+id/selectedMusicArtist"
            app:layout_constraintTop_toBottomOf="@+id/selectedMusicArtist"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="11dp"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintEnd_toEndOf="@+id/selectedMusicTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <TextView
            android:id="@+id/selectedMusicArtist"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="15dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/previousButton"
            app:layout_constraintEnd_toStartOf="@+id/selectedMusicTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@{controlMusicViewModel.artist}" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>